web: bash -lc 'set -e; mkdir -p backend/models; P=/app/.venv/bin/python; if [ -x "$P" ]; then :; elif command -v python >/dev/null 2>&1; then P=python; elif command -v python3 >/dev/null 2>&1; then P=python3; else echo "Python not found" >&2; exit 1; fi; "$P" -c "import os,urllib.request,os.path; u=os.environ.get(\"MODEL_URL\"); d=\"backend/models/global_flights_forecasting_model.pkl\"; (u and not os.path.exists(d)) and urllib.request.urlretrieve(u,d)"; exec "$P" -m uvicorn app.main:app --host 0.0.0.0 --port $PORT'
